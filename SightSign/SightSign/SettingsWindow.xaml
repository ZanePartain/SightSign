<Window x:Class="SightSign.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Title="Settings"
        Width="260" 
        Height="280">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="40">
            <CheckBox x:Name="RobotControlCheckBox"
                Width="120"
                HorizontalAlignment="Left"
                Content="Talk to the robot" 
                Checked="RobotControlCheckBox_CheckedStateChanged"
                Unchecked="RobotControlCheckBox_CheckedStateChanged"
                Margin="0 0 0 10" />
            <Button x:Name="ZUpButton" 
                Content="Z Up" 
                Width="120" 
                Height="30"
                Margin="0 20 0 0" 
                Click="ZUpButton_Click" />
            <Button x:Name="ZDownButton" 
                Content="Z Down" 
                Width="120" 
                Height="30"
                Margin="0 6 0 20" 
                Click="ZDownButton_Click" />
            <Button HorizontalAlignment="Right" 
                Content="Close" 
                Padding="20 4 20 4" 
                Click="CloseButton_Click" />
        </StackPanel>
    </Grid>
</Window>
